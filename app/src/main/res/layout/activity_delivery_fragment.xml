<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3"
    tools:context="com.example.nonel.bootcamp.DeliveryFragmentActivity">

    <fragment
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/fragment_list"
        android:name="com.example.nonel.bootcamp.DeliveryListFragment"
        class="com.example.nonel.bootcamp.DeliveryListFragment"
        tools:layout="@layout/fragment_delivery_list" />

    <fragment
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/fragment_view"
        android:name="com.example.nonel.bootcamp.DeliveryViewFragment"
        class="com.example.nonel.bootcamp.DeliveryViewFragment"
        tools:layout="@layout/fragment_delivery_view"/>
</LinearLayout>
