<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_meal_name"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000"
        android:text="Bulalo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_meal_image"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/tv_meal_name"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/slamphoto"/>

    <TextView
        android:id="@+id/tv_meal_price"
        android:textStyle="bold"
        android:textColor="#dd0000"
        android:textSize="20dp"
        android:text="Php 100"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tv_meal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_meal_description"
        android:text="Nilagang Bakang sinusutsot. May baka, mais, patatas, repolyo."
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/tv_meal_price"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:textSize="20sp"
        android:text="Order"
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_meal_description"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
