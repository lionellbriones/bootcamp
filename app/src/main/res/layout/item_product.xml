<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_meal"
    style="@style/deliveryGrid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_meal_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/slamphoto"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/deliveryListText"
            android:id="@+id/tv_meal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="s"/>
        <TextView
            style="@style/deliveryListPrice"
            android:id="@+id/tv_meal_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="s"/>
        <TextView
            style="@style/deliveryListDesc"
            android:id="@+id/tv_meal_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="s"/>
    </LinearLayout>

</LinearLayout>