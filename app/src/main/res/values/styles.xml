<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme">
        <!-- Customize your theme here. -->
    </style>

    <style name="slamBookList">
        <item name="android:background">#FFF</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="deliveryGrid">
        <item name="android:background">#FFF</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <style name="deliveryGridText">
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="deliveryList">
        <item name="android:background">#FFF</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>


    <style name="deliveryListText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="deliveryListDesc">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="deliveryListPrice">
        <item name="android:textColor">#DD0000</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
</resources>
